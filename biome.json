{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"include": ["**/*.js", "**/*.ts", "**/*.json", "**/*.tsx", "**/*.css"]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
	},
	"json": {
		"formatter": {
			"enabled": true
		},
         "linter": {
            "enabled": true
        }
	},
    "css": {
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
    }
}
